<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sim.BingoSimulationLayout">
   <VBox>
      <AnchorPane prefHeight="50.0" prefWidth="600.0">
         <Label fx:id="rollLabel" layoutX="286.0" layoutY="17.0"/>
      </AnchorPane>
      <HBox alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="600.0">
         <AnchorPane prefHeight="500.0" prefWidth="400.0"/>
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <VBox prefHeight="500.0" prefWidth="200.0">
               <AnchorPane prefHeight="104.0" prefWidth="200.0">
                  <Spinner fx:id="idSpinner" layoutX="60.0" layoutY="40.0" prefHeight="25.0"
                           prefWidth="82.0"/>
                  <Label layoutX="93.0" layoutY="22.0" text="ID:"/>
               </AnchorPane>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <VBox.margin>
                     <Insets/>
                  </VBox.margin>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                  <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#rollBallFunction"
                          prefHeight="113.0" prefWidth="60.0" text="Roll Ball"/>
                  <Button alignment="CENTER" layoutX="20.0" layoutY="20.0" mnemonicParsing="false"
                          onMouseClicked="#rollNextWinnerFunction" prefHeight="113.0" prefWidth="60.0"
                          text="Roll Next Winner" textAlignment="CENTER" wrapText="true"/>
                  <Button fx:id="rollNWinnersButton" alignment="CENTER" layoutX="80.0" layoutY="20.0"
                          mnemonicParsing="false" onMouseClicked="#rollNWinnersFunction"
                          prefHeight="113.0" prefWidth="60.0" text="Roll All Winners"
                          textAlignment="CENTER" wrapText="true"/>
               </HBox>
               <AnchorPane prefHeight="296.0" prefWidth="200.0">
                  <HBox layoutY="66.0" prefHeight="230.0" prefWidth="200.0">
                     <TableView fx:id="rollsTable" prefHeight="230.0" prefWidth="100.0">
                        <columns>
                           <TableColumn fx:id="rollsColumn" prefWidth="50.0" text="Roll"/>
                           <TableColumn fx:id="ballsColumn" minWidth="7.0" prefWidth="49.0" text="Ball"/>
                        </columns>
                        <placeholder>
                           <Label text="No Rolls!"/>
                        </placeholder>
                     </TableView>
                     <TableView fx:id="winsTable" layoutX="10.0" layoutY="10.0" prefHeight="230.0"
                                prefWidth="100.0">
                        <columns>
                           <TableColumn fx:id="winRollsColumn" prefWidth="50.0" text="Roll"/>
                           <TableColumn fx:id="winColumn" minWidth="7.0" prefWidth="49.0" text="Card ID"/>
                        </columns>
                        <placeholder>
                           <Label text="No Wins!"/>
                        </placeholder>
                     </TableView>
                  </HBox>
               </AnchorPane>
            </VBox>
         </AnchorPane>
      </HBox>
   </VBox>
</AnchorPane>
