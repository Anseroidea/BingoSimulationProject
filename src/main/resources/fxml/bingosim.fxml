<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sim.BingoSimulationLayout">
   <VBox prefHeight="550.0" prefWidth="750.0">
      <StackPane prefHeight="50.0" prefWidth="750.0">
         <children>
            <Label fx:id="rollLabel">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <HBox alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="750.0">
         <AnchorPane prefHeight="500.0" prefWidth="399.0" />
         <AnchorPane prefHeight="500.0" prefWidth="353.0">
            <VBox prefHeight="500.0" prefWidth="352.0">
               <AnchorPane prefHeight="104.0" prefWidth="200.0">
                  <Spinner fx:id="idSpinner" layoutX="136.0" layoutY="27.0" prefHeight="25.0" prefWidth="82.0" />
                  <Label layoutX="169.0" layoutY="6.0" text="ID:" />
               </AnchorPane>
               <StackPane fx:id="cardWonPane" prefHeight="150.0" prefWidth="200.0" />
               <AnchorPane prefHeight="150.0" prefWidth="352.0">
                  <HBox alignment="CENTER" layoutX="26.0" prefHeight="88.0" prefWidth="300.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#rollBallFunction" prefHeight="113.0" prefWidth="60.0" text="Roll Ball" />
                     <Button alignment="CENTER" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onMouseClicked="#rollNextWinnerFunction" prefHeight="113.0" prefWidth="60.0" text="Roll Next Winner" textAlignment="CENTER" wrapText="true" />
                     <Button fx:id="rollNWinnersButton" alignment="CENTER" layoutX="80.0" layoutY="20.0" mnemonicParsing="false" onMouseClicked="#rollNWinnersFunction" prefHeight="113.0" prefWidth="60.0" text="Roll All Winners" textAlignment="CENTER" wrapText="true" />
                  </HBox>
                  <Label fx:id="maxWinnerLabel" layoutX="75.0" layoutY="80.0" text="Number of winners has been reached!" visible="false" />
                  <Label fx:id="maxBallLabel" layoutX="108.0" layoutY="103.0" text="All balls have been rolled!" visible="false" />
               </AnchorPane>
               <AnchorPane prefHeight="296.0" prefWidth="352.0">
                  <HBox layoutY="66.0" prefHeight="230.0" prefWidth="352.0">
                     <TableView fx:id="rollsTable" prefHeight="230.0" prefWidth="176.0">
                        <columns>
                           <TableColumn fx:id="dayInfoRollColumn" prefWidth="65.0" text="Day" />
                           <TableColumn fx:id="rollsColumn" prefWidth="60.0" text="Roll" />
                           <TableColumn fx:id="ballsColumn" minWidth="7.0" prefWidth="49.0" text="Ball" />
                        </columns>
                        <placeholder>
                           <Label text="No Rolls!" />
                        </placeholder>
                     </TableView>
                     <TableView fx:id="winsTable" layoutX="10.0" layoutY="10.0" prefHeight="230.0" prefWidth="175.0">
                        <columns>
                           <TableColumn fx:id="dayInfoColumn" prefWidth="73.0" text="Day" />
                           <TableColumn fx:id="winRollsColumn" prefWidth="47.0" text="Roll" />
                           <TableColumn fx:id="winColumn" minWidth="7.0" prefWidth="54.0" text="Card ID" />
                        </columns>
                        <placeholder>
                           <Label text="No Wins!" />
                        </placeholder>
                     </TableView>
                  </HBox>
                  <Button layoutX="138.0" layoutY="25.0" mnemonicParsing="false" onMouseClicked="#goToPrint" text="Next (Print)" />
               </AnchorPane>
            </VBox>
         </AnchorPane>
      </HBox>
   </VBox>
</AnchorPane>
